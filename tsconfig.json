{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom", "dom.iterable", "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "public/*": ["../public/*"],

      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "constant/*": ["constant/*"],
      "layouts/*": ["layouts/*"],
      "utils/*": ["utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    "src/app"
  ],
  "exclude": ["node_modules"]
}
